package css3.color {
	 
	percentage = double(0.0->100.0) $%$;
	
	rgb = rgb(int(0->255), int(0->255), int(0->255), int(0->255)); /* |
		  rgb(<percentage>, <percentage>, <percentage>);*/
	
		  
	rgba = rgba(int(0->255), int(0->255), int(0->255), double(.0->1.0));/* |
		  rgba(<percentage>, <percentage>, <percentage>, double(.0->1.0));*/
	
	hsl = hsl(int, <percentage>, <percentage>);
	
	hsla = hsla(int, <percentage>, <percentage>, double(0.0->1.0));
	
	basic-color = black | silver | gray | white | maroon | red | purple | fuchsia | green | lime | olive | yellow | navy | blue | teal | aqua;
	
	hex-color = $#[0123456789ABCDEF]{6}$ | $#[0123456789ABCDEF]{3}$;
	
	color = <rgb> | <rgba> | <hsl> | <hsla> | <basic-color> | <hex-color> | transparent;
	
}